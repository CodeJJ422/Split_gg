<div class="header_favorite_player">
  <h2>お気に入りプレイヤー一覧</h2>
</div>
<div class="button_favorite_player">
  <%= link_to "新規追加", new_favorite_player_path, class: "btn btn-primary" %>
  <%= link_to "戻る", root_path, class: "btn btn-secondary" %>
</div>
<div class="main_contents">
  <ul>
    <% @favorite_players.each do |player| %>
      <li>
        <%= player.summoner_name %> #<%= player.tag %>がロビーに参加しました。
        <%= button_to "削除", favorite_player_path(player), method: :delete, data: { "turbo-confirm": "削除しますか？" } %>
      </li>
    <% end %>
  </ul>
</div>